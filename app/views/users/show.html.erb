<% if !@user.user_image.blank? %>
  <%= image_tag @user.user_image.detail.url, class: "user-image-show" %>
<% else %>
  <div class="no-user-image">
    <p>This user has not uploaded an image</p>
  </div>
<% end %>
<br>
<div class="profile-info-show">
  <%= @user.full_name %>
</div>

<div class="profile-info-show">
  <%= @user.email %>
</div>

<div class="profile-info-show">
  <%= @user.username %>
</div>

<div class="wishlist-show">
  <div class="wishlist-title">Wishlist</div>
  <div class="wishlist-all-container">
    <% @user.wishlists.each do |wishlist| %>
      <div class="wishlist-container">
        <div class="wishlist-description">
          <p><%= wishlist.item.description %></p>
          <%= link_to wishlist.item do %>
            <div class="read-more">
              <p>read more...</p>
            </div>
          <% end %>
        </div>
        <div class="wishlist-image">
          <%= link_to wishlist.item do %>
            <%= image_tag wishlist.item.item_image.small.url %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<p class="user-time-show">
  Account created on: <%= @user.created_at.strftime("%d %b. %Y") %>  
</p>
