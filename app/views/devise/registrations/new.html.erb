<h2 class="register-title">Register</h2>
<%= devise_error_messages! %>
<div class="register-box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email Adress", class: "field-box" %>
    </div>

    <div class="field">
      <%= f.text_field :username, placeholder: "Username", class: "field-box" %>
    </div>

    <div class="field">
      <%= f.text_field :full_name, placeholder: "Full Name", class: "field-box" %>
    </div>

    <div class="field">

      <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "field-box" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off", class: "field-box" %>
    </div>

    <div class="field">
      <%= f.file_field :user_image %>
    </div>

    <div class="actions sign-up">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>

<div class="under-registration">
Alredy have an account? <%= render "devise/shared/links" %>
</div>