<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
     <%= f.label :item_image %><br />
     <%= f.file_field :item_image %>
  </div>

  <div class="field">
     <%= f.label :cost %><br />
     <%= f.number_field :cost, :step => 'any' %>
  </div>

  <fieldset>
      <%= collection_check_boxes(:item, :category_ids, Category.all, :id, :name) %>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
