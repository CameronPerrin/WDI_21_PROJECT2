<div class="item-image-show">
  <% if !@item.item_image.blank? %>
    <%= image_tag @item.item_image.url %>
  <% else %>
    <p class="no-image">no image available</p>
  <% end %>
  <div class="price-show">
    <div></div>
    <p>$<%= @item.cost %></p>
  </div>
</div>

<div class="info-show">
  <div class="item-name-show">
    <%= @item.name %>
  </div>
  <div class="item-description-show">
    <%= @item.description %>
  </div>


  <div class="item-categories-show">
    Categories:<br>
    <%= render @item.categories %>
  </div>
</div>

<%= link_to(add_to_wishlist_item_path, method: :post) do %>
  <div class="wishlist-add">
    Add to Wishlist
  </div>
<% end %>

<%= link_to(add_to_cart_item_path, method: :post) do %>
  <div class="cart-add">
    Add to Cart
  </div>
<% end %>
<%= link_to @item.user do %>
  <%= image_tag @item.user.user_image.thumb.url, class: "item-user_image-show" %>
<% end %>

<% if current_user == @item.user %>
  <%= link_to 'Edit', edit_item_path(@item) %>
<% end %>
