<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Armor photo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.description %></td>
        <td><%= image_tag a.item_image.url %></td>
        <td><%= a.user.username %></td>
        <td><%= link_to 'Show', a %></td>
        <td><%= link_to 'Edit', edit_a_path(a) %></td>
        <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
